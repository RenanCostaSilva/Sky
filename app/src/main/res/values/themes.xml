<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TEMA PADRÃO: herdando de Material3 -->
    <style name="Theme.Sky" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary color como 'secondary' do Material3 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here -->
    </style>

    <!-- TEMA FULLSCREEN (se precisar em telas específicas) -->
    <style name="Theme.Sky_FullScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- TEMA LEGADO (NÃO use em telas com Material 3!) -->
    <style name="Theme.NoStatusBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

</resources>
