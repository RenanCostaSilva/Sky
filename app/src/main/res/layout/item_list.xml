<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Adicione variáveis de binding se precisar -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_card_item_filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/Primaria"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <!-- Imagem com aspect ratio de 2:3 (padrão para pôster de filme) -->
                <ImageView
                    android:id="@+id/sky_filme_foto"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="2:3"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/poderosochefao2" />

                <!-- Badge pequena sobre a imagem -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_badge"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#FF5722"
                    app:cardCornerRadius="14dp"
                    app:layout_constraintTop_toTopOf="@id/sky_filme_foto"
                    app:layout_constraintEnd_toEndOf="@id/sky_filme_foto"
                    android:layout_margin="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="14"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Nome do filme -->
                <TextView
                    android:id="@+id/sky_filme_nome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sky_filme_foto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:text="Poderoso Chefão"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
